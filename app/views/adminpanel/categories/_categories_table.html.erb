<div class="row-fluid">
  <%=
    link_to(
      content_tag(:div,
        content_tag(
          :i,
          nil,
          :class => 'fa fa-plus-circle fa-2x') +
          content_tag(
            :span,
            I18n.t("action.create", resource: @model.display_name) + " para #{model.pluralize}",
            nil
          ),
          :class => "btn btn-box span2"),
      {
        :controller => params[:controller],
        :action => "new",
        :"model" => model,
        :currentcontroller => params[:controller],
        :parent_id => params[:parent_id]
      },
      :"data-target" => '#new-category',
      :"data-toggle" => 'modal',
      :remote => true
    )
  %>
</div>

<br/>

<table id="<%= model %>-table" class="table table-striped table-bordered">
  <tr>
   <th><%= t("category.name") %></th>
   <th><%= t("actions") %></th>
  </tr>
  <% categories.each do |category| %>
    <tr>
      <td>
        <%= link_to category.name,
          category_action_link(category)
        %>
      </td>
      <td>
        <%= render 'adminpanel/icons/show', resource: category, url: category_action_link(category) %>

        <%= render 'adminpanel/icons/edit', resource: category %>

        <%= render 'adminpanel/icons/delete', resource: category %>
      </td>
    </tr>
  <% end %>

</table>
